<!-- Plywood Quote Request Page -->
<div class="plywood-quote-page">
  <div class="container-luxury">
    <div class="quote-header">
      <h1 class="page-title text-gradient">HARDREX PLYWOOD QUOTE</h1>
      <p class="page-subtitle">Get a custom quote for premium Red & Red core plywood</p>
    </div>
    
    <div class="quote-content grid-luxury two-col">
      <div class="quote-form-section">
        <h2>Request Your Quote</h2>
        
        {% form 'contact', class: 'plywood-quote-form' %}
          {% if form.posted_successfully? %}
            <div class="success-message">
              <h3>Thank you for your quote request!</h3>
              <p>We'll get back to you within 24 hours with a detailed quote.</p>
            </div>
          {% endif %}
          
          {% if form.errors %}
            <div class="error-messages">
              {{ form.errors | default_errors }}
            </div>
          {% endif %}
          
          <div class="form-row">
            <div class="form-group">
              <label for="contact_name">Full Name *</label>
              <input type="text" name="contact[name]" id="contact_name" required value="{{ form.name }}">
            </div>
            <div class="form-group">
              <label for="contact_email">Email Address *</label>
              <input type="email" name="contact[email]" id="contact_email" required value="{{ form.email }}">
            </div>
          </div>
          
          <div class="form-row">
            <div class="form-group">
              <label for="contact_phone">Phone Number *</label>
              <input type="tel" name="contact[phone]" id="contact_phone" required value="{{ form.phone }}">
            </div>
            <div class="form-group">
              <label for="contact_company">Company Name</label>
              <input type="text" name="contact[company]" id="contact_company" value="{{ form.company }}">
            </div>
          </div>
          
          <div class="form-group">
            <label for="contact_address">Delivery Address *</label>
            <textarea name="contact[address]" id="contact_address" required rows="3">{{ form.address }}</textarea>
          </div>
          
          <h3>Plywood Specifications</h3>
          
          <div class="form-row">
            <div class="form-group">
              <label for="plywood_thickness">Thickness *</label>
              <select name="contact[thickness]" id="plywood_thickness" required>
                <option value="">Select thickness</option>
                <option value="6mm">6mm</option>
                <option value="12mm">12mm</option>
                <option value="16mm">16mm</option>
                <option value="18mm">18mm</option>
              </select>
            </div>
            <div class="form-group">
              <label for="plywood_size">Size *</label>
              <select name="contact[size]" id="plywood_size" required>
                <option value="">Select size</option>
                <option value="7x4 ft">7x4 ft</option>
                <option value="8x4 ft">8x4 ft</option>
                <option value="custom">Custom Size</option>
              </select>
            </div>
          </div>
          
          <div class="form-row">
            <div class="form-group">
              <label for="plywood_quantity">Quantity (sheets) *</label>
              <input type="number" name="contact[quantity]" id="plywood_quantity" min="1" required>
            </div>
            <div class="form-group">
              <label for="delivery_timeline">Required Timeline</label>
              <select name="contact[timeline]" id="delivery_timeline">
                <option value="immediate">Immediate (1-3 days)</option>
                <option value="week">Within a week</option>
                <option value="month">Within a month</option>
                <option value="flexible">Flexible</option>
              </select>
            </div>
          </div>
          
          <div class="form-group">
            <label for="custom_size_details">Custom Size Details (if applicable)</label>
            <textarea name="contact[custom_size]" id="custom_size_details" rows="2" placeholder="Please specify custom dimensions">{{ form.custom_size }}</textarea>
          </div>
          
          <div class="form-group">
            <label for="project_details">Project Details</label>
            <textarea name="contact[project_details]" id="project_details" rows="4" placeholder="Tell us about your project, intended use, and any special requirements">{{ form.project_details }}</textarea>
          </div>
          
          <input type="hidden" name="contact[subject]" value="Hardrex Plywood Quote Request">
          
          <button type="submit" class="btn-luxury btn-primary-luxury submit-btn">
            REQUEST QUOTE
          </button>
        {% endform %}
      </div>
      
      <div class="plywood-info-section">
        <div class="info-card card-luxury">
          <h3>Why Choose Hardrex Plywood?</h3>
          <ul class="benefits-list">
            <li>✓ <strong>Red & Red Core:</strong> Superior strength compared to Red & White core alternatives</li>
            <li>✓ <strong>In-house Production:</strong> Complete control over quality from resin to finish</li>
            <li>✓ <strong>Premium Materials:</strong> High-grade wood and proprietary binding resins</li>
            <li>✓ <strong>Consistent Quality:</strong> Every sheet meets our strict standards</li>
            <li>✓ <strong>Multiple Sizes:</strong> Available in 7x4 ft and 8x4 ft standard sizes</li>
            <li>✓ <strong>Custom Solutions:</strong> Tailored sizes for specific project needs</li>
          </ul>
        </div>
        
        <div class="info-card card-luxury">
          <h3>Technical Specifications</h3>
          <div class="spec-grid">
            <div class="spec-item">
              <strong>Thickness Options:</strong>
              <span>6mm, 12mm, 16mm, 18mm</span>
            </div>
            <div class="spec-item">
              <strong>Standard Sizes:</strong>
              <span>7x4 ft, 8x4 ft</span>
            </div>
            <div class="spec-item">
              <strong>Core Construction:</strong>
              <span>Red & Red Core</span>
            </div>
            <div class="spec-item">
              <strong>Moisture Content:</strong>
              <span>8-12%</span>
            </div>
            <div class="spec-item">
              <strong>Grade:</strong>
              <span>BWR (Boiling Water Resistant)</span>
            </div>
            <div class="spec-item">
              <strong>Application:</strong>
              <span>Interior & Exterior</span>
            </div>
          </div>
        </div>
        
        <div class="info-card card-luxury">
          <h3>Quote Process</h3>
          <div class="process-steps">
            <div class="step">
              <span class="step-number">1</span>
              <div class="step-content">
                <strong>Submit Request</strong>
                <p>Fill out the form with your requirements</p>
              </div>
            </div>
            <div class="step">
              <span class="step-number">2</span>
              <div class="step-content">
                <strong>Quick Response</strong>
                <p>Receive quote within 24 hours</p>
              </div>
            </div>
            <div class="step">
              <span class="step-number">3</span>
              <div class="step-content">
                <strong>Confirm Order</strong>
                <p>Approve quote and schedule delivery</p>
              </div>
            </div>
          </div>
        </div>
        
        <div class="contact-info card-luxury">
          <h3>Need Immediate Assistance?</h3>
          <p>For urgent requirements or technical questions:</p>
          <div class="contact-details">
            <div class="contact-item">
              <strong>Phone:</strong> <a href="tel:+911234567890">+91 12345 67890</a>
            </div>
            <div class="contact-item">
              <strong>Email:</strong> <a href="mailto:plywood@hardrex.com">plywood@hardrex.com</a>
            </div>
            <div class="contact-item">
              <strong>WhatsApp:</strong> <a href="https://wa.me/911234567890" target="_blank">+91 12345 67890</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.plywood-quote-page {
  padding: 100px 0;
  background: var(--color-background-light);
  min-height: 100vh;
}

.quote-header {
  text-align: center;
  margin-bottom: 80px;
}

.page-title {
  font-size: 3rem;
  margin-bottom: 20px;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.page-subtitle {
  font-size: 1.3rem;
  color: #666;
  font-family: var(--font-secondary);
}

.quote-content {
  align-items: start;
}

.quote-form-section {
  background: white;
  padding: 50px;
  border-radius: var(--border-radius);
  box-shadow: var(--shadow-light);
}

.plywood-quote-form h2 {
  margin-bottom: 30px;
  color: var(--color-primary);
}

.plywood-quote-form h3 {
  margin: 40px 0 20px 0;
  color: var(--color-plywood);
  font-size: 1.3rem;
}

.form-row {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20px;
  margin-bottom: 20px;
}

.form-group {
  margin-bottom: 20px;
}

.form-group label {
  display: block;
  margin-bottom: 8px;
  font-weight: 600;
  color: var(--color-primary);
  font-family: var(--font-primary);
}

.form-group input,
.form-group select,
.form-group textarea {
  width: 100%;
  padding: 12px 15px;
  border: 2px solid #e0e0e0;
  border-radius: 8px;
  font-family: var(--font-secondary);
  font-size: 1rem;
  transition: var(--transition);
}

.form-group input:focus,
.form-group select:focus,
.form-group textarea:focus {
  outline: none;
  border-color: var(--color-secondary);
  box-shadow: 0 0 0 3px rgba(212, 175, 55, 0.1);
}

.submit-btn {
  width: 100%;
  margin-top: 30px;
  padding: 18px;
  font-size: 1.1rem;
}

.success-message {
  background: #d4edda;
  color: #155724;
  padding: 20px;
  border-radius: 8px;
  margin-bottom: 20px;
  border: 1px solid #c3e6cb;
}

.error-messages {
  background: #f8d7da;
  color: #721c24;
  padding: 20px;
  border-radius: 8px;
  margin-bottom: 20px;
  border: 1px solid #f5c6cb;
}

.plywood-info-section {
  display: flex;
  flex-direction: column;
  gap: 30px;
}

.info-card {
  padding: 30px;
}

.info-card h3 {
  color: var(--color-primary);
  margin-bottom: 20px;
  font-size: 1.3rem;
}

.benefits-list {
  list-style: none;
  padding: 0;
}

.benefits-list li {
  margin-bottom: 12px;
  font-family: var(--font-secondary);
  line-height: 1.6;
}

.spec-grid {
  display: grid;
  gap: 15px;
}

.spec-item {
  display: flex;
  justify-content: between;
  align-items: center;
  padding: 10px 0;
  border-bottom: 1px solid #f0f0f0;
}

.spec-item strong {
  color: var(--color-primary);
  min-width: 140px;
}

.process-steps {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.step {
  display: flex;
  align-items: center;
  gap: 15px;
}

.step-number {
  background: var(--color-secondary);
  color: var(--color-primary);
  width: 35px;
  height: 35px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-family: var(--font-primary);
}

.step-content strong {
  display: block;
  color: var(--color-primary);
  margin-bottom: 5px;
}

.contact-details {
  margin-top: 15px;
}

.contact-item {
  margin-bottom: 10px;
  font-family: var(--font-secondary);
}

.contact-item a {
  color: var(--color-plywood);
  text-decoration: none;
}

.contact-item a:hover {
  text-decoration: underline;
}

@media (max-width: 968px) {
  .quote-content {
    grid-template-columns: 1fr;
  }
  
  .form-row {
    grid-template-columns: 1fr;
  }
  
  .quote-form-section {
    padding: 30px;
  }
  
  .page-title {
    font-size: 2rem;
  }
}

@media (max-width: 600px) {
  .plywood-quote-page {
    padding: 60px 0;
  }
  
  .quote-form-section {
    padding: 20px;
  }
}
</style>