{%- style -%}
  .footer {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .footer {
      margin-top: {{ section.settings.margin_top }}px;
    }

    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Enhanced Footer Styles */
  .footer--luxury {
    background: linear-gradient(135deg, #1a1a1a 0%, #2c1810 100%);
    color: #ffffff;
    position: relative;
    overflow: hidden;
  }

  .footer--luxury::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"><g fill="none" fill-rule="evenodd"><g fill="%23ffffff" fill-opacity="0.02"><circle cx="30" cy="30" r="1"/></g></g></svg>') repeat;
    z-index: 1;
  }

  .footer--luxury .footer__content {
    position: relative;
    z-index: 2;
  }

  .footer--luxury .footer__brand {
    text-align: center;
    margin-bottom: 4rem;
    padding: 3rem 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer--luxury .footer__brand-logo {
    font-family: 'Montserrat', sans-serif;
    font-size: 2.5rem;
    font-weight: 700;
    color: #ffffff;
    text-decoration: none;
    display: inline-block;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #ffffff 0%, #d4af37 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .footer--luxury .footer__brand-tagline {
    font-family: 'Lato', sans-serif;
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 2rem;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
  }

  .footer--luxury .footer__main {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem;
    margin-bottom: 3rem;
    padding: 0 2rem;
  }

  .footer--luxury .footer__column h3 {
    font-family: 'Montserrat', sans-serif;
    font-size: 1.2rem;
    font-weight: 600;
    color: #d4af37;
    margin-bottom: 1.5rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .footer--luxury .footer__column ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer--luxury .footer__column li {
    margin-bottom: 0.8rem;
  }

  .footer--luxury .footer__column a {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    font-family: 'Lato', sans-serif;
    transition: all 0.3s ease;
    display: inline-block;
  }

  .footer--luxury .footer__column a:hover {
    color: #d4af37;
    transform: translateX(5px);
  }

  .footer--luxury .footer__social {
    text-align: center;
    margin-bottom: 3rem;
  }

  .footer--luxury .footer__social-title {
    font-family: 'Montserrat', sans-serif;
    font-size: 1.3rem;
    font-weight: 600;
    color: #d4af37;
    margin-bottom: 1.5rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .footer--luxury .footer__social-links {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .footer--luxury .footer__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 50px;
    height: 50px;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    color: #ffffff;
    text-decoration: none;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
  }

  .footer--luxury .footer__social-link:hover {
    background: #d4af37;
    border-color: #d4af37;
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(212, 175, 55, 0.3);
  }

  .footer--luxury .footer__newsletter {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    padding: 2.5rem;
    margin: 3rem 2rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
  }

  .footer--luxury .footer__newsletter h3 {
    font-family: 'Montserrat', sans-serif;
    font-size: 1.5rem;
    font-weight: 600;
    color: #ffffff;
    margin-bottom: 1rem;
    text-align: center;
  }

  .footer--luxury .footer__newsletter p {
    color: rgba(255, 255, 255, 0.8);
    text-align: center;
    margin-bottom: 2rem;
    font-family: 'Lato', sans-serif;
  }

  .footer--luxury .footer__newsletter-form {
    display: flex;
    gap: 1rem;
    max-width: 400px;
    margin: 0 auto;
  }

  .footer--luxury .footer__newsletter-input {
    flex: 1;
    padding: 1rem 1.5rem;
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 8px;
    background: rgba(255, 255, 255, 0.1);
    color: #ffffff;
    font-family: 'Lato', sans-serif;
    backdrop-filter: blur(10px);
  }

  .footer--luxury .footer__newsletter-input::placeholder {
    color: rgba(255, 255, 255, 0.6);
  }

  .footer--luxury .footer__newsletter-button {
    padding: 1rem 2rem;
    background: linear-gradient(135deg, #d4af37 0%, #f4d03f 100%);
    color: #1a1a1a;
    border: none;
    border-radius: 8px;
    font-family: 'Montserrat', sans-serif;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .footer--luxury .footer__newsletter-button:hover {
    background: linear-gradient(135deg, #f4d03f 0%, #d4af37 100%);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(212, 175, 55, 0.3);
  }

  .footer--luxury .footer__bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding: 2rem;
    text-align: center;
    background: rgba(0, 0, 0, 0.3);
  }

  .footer--luxury .footer__bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .footer--luxury .footer__copyright {
    color: rgba(255, 255, 255, 0.7);
    font-family: 'Lato', sans-serif;
    font-size: 0.9rem;
  }

  .footer--luxury .footer__copyright a {
    color: #d4af37;
    text-decoration: none;
  }

  .footer--luxury .footer__payment {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .footer--luxury .footer__payment-icons {
    display: flex;
    gap: 0.5rem;
  }

  .footer--luxury .footer__payment-icon {
    width: 32px;
    height: 24px;
    background: #ffffff;
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.7rem;
    color: #1a1a1a;
    font-weight: 600;
  }

  @media screen and (max-width: 768px) {
    .footer--luxury .footer__main {
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 2rem;
      padding: 0 1rem;
    }

    .footer--luxury .footer__newsletter {
      margin: 2rem 1rem;
      padding: 2rem;
    }

    .footer--luxury .footer__newsletter-form {
      flex-direction: column;
    }

    .footer--luxury .footer__social-links {
      gap: 1rem;
    }

    .footer--luxury .footer__bottom-content {
      flex-direction: column;
      text-align: center;
    }
  }
{%- endstyle -%}

