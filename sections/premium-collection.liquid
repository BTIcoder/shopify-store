{{ 'premium-collection.css' | asset_url | stylesheet_tag }}

<section class="premium-collection">
  <div class="premium-collection__container">
    
    <!-- Section Header -->
    <div class="premium-collection__header">
      {% if section.settings.badge_text != blank %}
        <span class="premium-collection__badge">{{ section.settings.badge_text }}</span>
      {% endif %}
      
      <h2 class="premium-collection__title">{{ section.settings.title | default: 'Our Premium Collection' }}</h2>
      
      {% if section.settings.subtitle != blank %}
        <p class="premium-collection__subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}
    </div>

    <!-- Collection Grid -->
    <div class="premium-collection__grid">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'collection_item' %}
            <div class="collection-card" {{ block.shopify_attributes }}>
              {% if block.settings.image %}
                <div class="collection-card__image">
                  <img 
                    src="{{ block.settings.image | image_url: width: 800 }}"
                    alt="{{ block.settings.title | escape }}"
                    loading="lazy"
                    width="400"
                    height="300"
                  >
                </div>
              {% endif %}
              
              <div class="collection-card__content">
                <h3 class="collection-card__title">{{ block.settings.title }}</h3>
                
                {% if block.settings.description != blank %}
                  <p class="collection-card__description">{{ block.settings.description }}</p>
                {% endif %}
                
                {% if block.settings.button_text != blank %}
                  <a href="{{ block.settings.button_link | default: '#' }}" class="collection-card__btn">
                    {{ block.settings.button_text }}
                    <svg class="collection-card__arrow" width="16" height="16" viewBox="0 0 16 16" fill="none">
                      <path d="M6 12L10 8L6 4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  </a>
                {% endif %}
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>

    <!-- Bottom CTA Section -->
    {% if section.settings.bottom_cta_text != blank %}
      <div class="premium-collection__cta">
        <h3 class="premium-collection__cta-title">{{ section.settings.bottom_cta_text }}</h3>
        
        {% if section.settings.bottom_cta_description != blank %}
          <p class="premium-collection__cta-description">{{ section.settings.bottom_cta_description }}</p>
        {% endif %}
        
        {% if section.settings.bottom_cta_button_text != blank %}
          <a href="{{ section.settings.bottom_cta_button_link | default: '#' }}" class="premium-collection__cta-btn">
            {{ section.settings.bottom_cta_button_text }}
          </a>
        {% endif %}
      </div>
    {% endif %}

  </div>
</section>

